{
  "name": "channels-lib",
  "version": "1.0.0",
  "description": "A Library that abstracts farcaster channel actions and data",
  "type": "commonjs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.mjs",
      "types": "./dist/types/index.d.ts"
    },
    "./node": {
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/",
    "src/",
    "!src/tests"
  ],
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "format": "prettier --write .",
    "publish:sdk": "yalc publish --push --up",
    "prepublishOnly": "npm ci && npm run build",
    "dev": "concurrently -c yellow,blue -n RLP,SRV \"npm:build:watch\" \"npm:serve\"",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.build.json",
    "build": "tsc --project tsconfig.build.json",
    "test": "jest --coverage",
    "test:channel": "jest --coverage ./test/channels.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metastable-labs/channels-lib.git"
  },
  "keywords": [
    "farcaster",
    "channels",
    "social"
  ],
  "author": "Njoku Emmanuel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metastable-labs/channels-lib/issues"
  },
  "homepage": "https://github.com/metastable-labs/channels-lib#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "mjs",
      "cjs",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node",
      "d.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "dotenv": "^16.3.1",
    "esbuild": "0.21.5",
    "fs": "^0.0.1-security",
    "glob": "^8.0.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2",
    "ts-jest": "^29.1.1",
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "@airstack/node": "^0.0.7",
    "@apollo/client": "^3.10.5",
    "graphql": "^16.8.2"
  }
}
