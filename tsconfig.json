{
  "ts-node": {
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true
    }
  },
  "compilerOptions": {
    "types": ["jest"],
    "outDir": "./dist",
    "declaration": true,
    "importsNotUsedAsValues": "remove",
    "lib": ["ES2021", "DOM"],
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"]
}